{% extends "base.jinja2" %}

{% block section %}
  {% if request.authenticated_userid %}
    <form action="{{ request.route_url('add_entry') }}" method="POST" class="add_entry">
      <p>Entry Title:</p>
      <input id="entry-title" type="text" name="title" value="{{ title }}" />
      <p>Entry Content:</p>
      <textarea id="entry-text" name="text">{{ text }}</textarea>
      <input id="post-entry-btn" class="bottom-tab-btn" type="submit" value="Done!" name="Done!"/>
    </form>
  {% endif %}
{% endblock %}
